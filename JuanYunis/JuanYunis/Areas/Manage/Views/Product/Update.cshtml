@model Product
@{
    ViewData["Title"] = "Update";
    IEnumerable<Category> categories = ViewBag.Categories;
    SelectList selectListCategories = new SelectList(categories, nameof(Category.Id), nameof(Category.Name));
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Product Update</h1>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="p-3 border border-light bg-gradient-light">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiscountedPrice"></label>
                    <input asp-for="DiscountedPrice" class="form-control">
                    <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EcoTax"></label>
                    <input asp-for="EcoTax" class="form-control">
                    <span asp-validation-for="EcoTax" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Count"></label>
                    <input asp-for="Count" class="form-control">
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullDescription"></label>
                    <textarea asp-for="FullDescription" class="form-control" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="SmallDescription"></label>
                    <input asp-for="SmallDescription" class="form-control">
                    <span asp-validation-for="SmallDescription" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input asp-for="IsOurProduct" class="form-check-input">
                    <label asp-for="IsOurProduct" class="form-check-label"></label>
                    <span asp-validation-for="IsOurProduct" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input asp-for="IsTopSeller" class="form-check-input">
                    <label asp-for="IsTopSeller" class="form-check-label"></label>
                    <span asp-validation-for="IsTopSeller" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="MainFile"></label>
                    <input asp-for="MainFile" class="form-control-file">
                    <span asp-validation-for="MainFile" class="text-danger"></span>
                </div>
                <div>
                    <img class="border border-dark" style="width:100px" src="~/assets/img/product/@Model.ProductImages?.FirstOrDefault(pi=>pi.IsMainImage == true)?.Image">
                </div>
                <div class="form-group">
                    <label asp-for="Files"></label>
                    <input asp-for="Files" class="form-control-file">
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
                <div class="imageContainer d-flex flex-wrap">
                    @await Html.PartialAsync("_DeleteImagePartial",Model.ProductImages)
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="selectListCategories">
                        <option value="">Select a Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>
</div>

@section Scripts{
    <script>
        ClassicEditor
            .create(document.querySelector('#FullDescription'))
            .catch(error => {
                console.error(error);
            });
    </script>
}