@model AppUser
@{
    ViewData["Title"] = "ChangeRole";
    List<string> allRoles = ViewBag.Roles;
}

<dvi class="row">
    <div class="col-lg-12 mb-5">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>UserName</th>
                    <th>Email</th>
                    <th>Role</th>

                </tr>
            </thead>
            <tbody class="listContainer">
                <tr>

                    <td>@Model.Name</td>
                    <td>@Model.Email</td>
                    <td>
                        @string.Join(",",Model.Roles.Select(x=>x))
                </tr>
            </tbody>
        </table>
    </div>
    <div class="col-lg-12">
        <div class="p-3 border border-light bg-gradient-light">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form method="post">

                <div class=" form-group">
                    <label asp-for="Roles">Choose A New Role</label>
                    <select asp-for="Roles" class="roleSelector form-control" >
                        @for (int i = 0; i < allRoles.Count; i++)
                        {
                            <option value="@allRoles[i]">@allRoles[i]</option>
                        }
                    </select>
                    <span asp-validation-for="Roles" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </div>
</dvi>

