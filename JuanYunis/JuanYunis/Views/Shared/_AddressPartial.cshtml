@model Address

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-controller="Account" asp-action="AddAddress">
    <div class="row">
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="Line1">Address Line1</label>
                <input asp-for="Line1" placeholder="Address Line1" />
                <span asp-validation-for="Line1" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="Line2">Address Line2</label>
                <input asp-for="Line2" placeholder="Address Line2" />
                <span asp-validation-for="Line2" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="Country">Country</label>
                <input asp-for="Country" placeholder="Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="single-input-item">
                <label asp-for="Town">Town</label>
                <input asp-for="Town" placeholder="Town" />
                <span asp-validation-for="Town" class="text-danger"></span>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="single-input-item">
                <label asp-for="State">State</label>
                <input asp-for="State" placeholder="State" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="single-input-item">
                <label asp-for="PostalCode">Postal Code</label>
                <input asp-for="PostalCode" placeholder="Postal Code" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>
        <div class="align-items-center">
            <div class="col-lg-2">
                <div class="single-input-item d-flex">
                    <input style="width:24px; height:24px;" class="mr-2" asp-for="isDefault" />
                    <label class="mb-1" asp-for="isDefault">Default</label>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="single-input-item">
                    <button class="btn check-btn sqr-btn ">Save Changes</button>
                </div>
            </div>
        </div>
    </div>
</form>