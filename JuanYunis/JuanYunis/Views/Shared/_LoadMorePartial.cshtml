@model IEnumerable<Product>

@foreach(Product product in Model)
{
    <div class="col-lg-4 col-sm-6">
        <!-- product grid item start -->
        <div class="product-item mb-53">
            <div class="product-thumb">
                <a href="product-details.html">
                    <img src="~/assets/img/product/@product.ProductImages.FirstOrDefault(pi=>pi.IsMainImage).Image" alt="">
                </a>
            </div>
            <div class="product-content">
                <h5 class="product-name">
                    <a href="product-details.html">@product.Title</a>
                </h5>
                <div class="price-box">
                    @if (product.DiscountedPrice != null && product.DiscountedPrice > 0)
                    {
                         <span class="price-regular">$@product.DiscountedPrice</span>
                        <span class="price-old"><del>$@product.Price</del></span>
                    }else
                    {
                         <span class="price-regular">$@product.Price</span>
                    }

                   
                </div>
                <div class="product-action-link">
                    <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                    <a class="addBasket" asp-controller="Basket" asp-action="AddBasket" asp-route-id="@product.Id" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                    <a class="modalBtn" asp-controller="Product" asp-action="Modal" asp-route-id="@product.Id" data-toggle="modal" data-target="#quick_view">
                        <span data-toggle="tooltip"
                              title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                    </a>
                </div>
            </div>
        </div>
        <!-- product grid item end -->
    </div>
}